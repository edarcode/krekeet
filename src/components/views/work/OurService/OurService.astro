---
import { SERVICES } from "./services";
import Fancy from "../../../spans/Fancy/Fancy.astro";
---

<section>
  <h2 class="bottom-ani"><Fancy>Nuestros</Fancy> Servicios</h2>
  <ul>
    {
      SERVICES.map((item) => (
        <li class="bottom-ani">
          <h3>{item.title}</h3>
          <h4>{item.subTitle}</h4>

          <picture>
            <img src={item.img.src} alt={item.title} />
          </picture>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    display: grid;
    justify-items: center;
    gap: var(--xl);
    margin-bottom: var(--xl3);

    h2 {
      font-size: 60px;
    }

    ul {
      padding: 0;
      display: grid;
      gap: var(--xl);
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      width: 100%;

      li {
        position: relative;
        list-style: none;
        border-radius: 25px;

        @media (hover: hover) {
          &:hover {
            background-color: var(--primary);
            opacity: 0.8;
          }
        }

        &:hover h4 {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: var(--primary);
          border-radius: 25px;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 20px;
          text-align: center;
          padding: var(--sm);
          z-index: 20;

          transition: background 0.3s ease;
        }

        h3,
        h4 {
          position: absolute;
          left: var(--lg);
          font-size: 16px;
          z-index: 10;
        }

        h3 {
          bottom: var(--xl);
        }

        h4 {
          bottom: var(--lg);
          font-size: 14px;
        }

        picture {
          border-radius: var(--br);
          overflow: hidden;
          img {
            border-radius: var(--br);
          }
        }
      }
    }
  }
</style>
