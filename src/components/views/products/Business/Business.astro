---
import foto from "./assets/1.png";
---

<section
  id="business"
  class="flex flex-col justify-center h-[795px] p-[var(--xs)] my-[var(--xxl)] overflow-hidden"
>
  <!-- default  -->
  <div
    id="business-default"
    class="sm:hidden md:hidden lg:hidden xl:hidden flex flex-col gap-[var(--xxl)]"
  >
    <p
      data-aos="fade-right"
      class="text-left font-semibold text-[27px] leading-[40px]"
    >
      Hacemos de <span class="text-[var(--primary)]">tu idea</span> o <span
        class="text-[var(--primary)]">negocio</span
      > una <span class="text-[var(--primary)]">obra maestra</span>
    </p>
    <div
      data-aos="fade-left"
      class="flex flex-row justify-center rounded-[10px]"
    >
      <img src={foto.src} alt="coffee" class="rounded-[10px]" />
    </div>
  </div>
  <!-- sm  -->
  <div
    id="business-sm"
    class="hidden sm:flex md:hidden flex-col gap-[var(--xxl)]"
  >
    <p
      data-aos="fade-right"
      class="text-left font-semibold text-[35px] leading-[40px]"
    >
      Hacemos de <span class="text-[var(--primary)]">tu idea</span> o <span
        class="text-[var(--primary)]">negocio</span
      > una <span class="text-[var(--primary)]">obra maestra</span>
    </p>
    <div
      data-aos="fade-left"
      class="flex flex-row justify-center rounded-[10px]"
    >
      <img src={foto.src} alt="coffee" class="rounded-[10px]" />
    </div>
  </div>
  <!-- md  -->
  <div
    id="business-md"
    class="hidden md:flex lg:hidden flex-col gap-[var(--xxl)]"
  >
    <p
      data-aos="fade-right"
      class="text-center font-semibold text-[43px] leading-[40px]"
    >
      Hacemos de <span class="text-[var(--primary)]">tu idea</span> o <span
        class="text-[var(--primary)]">negocio</span
      > una <span class="text-[var(--primary)]">obra maestra</span>
    </p>
    <div
      data-aos="fade-left"
      class="flex flex-row justify-center rounded-[10px]"
    >
      <img src={foto.src} alt="coffee" class="rounded-[10px]" />
    </div>
  </div>
  <!-- lg  -->
  <div
    id="business-lg"
    class="hidden lg:flex xl:hidden flex-row gap-[var(--xxl)]"
  >
    <div class="flex flex-col justify-center">
      <p
        data-aos="fade-right"
        class="text-left font-semibold text-[51px] leading-[40px]"
      >
        Hacemos de <span class="text-[var(--primary)]">tu idea</span> o <span
          class="text-[var(--primary)]">negocio</span
        > una <span class="text-[var(--primary)]">obra maestra</span>
      </p>
    </div>
    <div
      data-aos="fade-left"
      class="flex flex-row justify-center rounded-[10px]"
    >
      <img src={foto.src} alt="coffee" class="rounded-[10px] w-96" />
    </div>
  </div>
  <!-- xl  -->
  <div id="business-xl" class="hidden xl:flex flex-row gap-[var(--xxl)]">
    <div class="flex flex-col justify-center">
      <p
        data-aos="fade-right"
        class="text-left font-semibold text-[60px] leading-[76px]"
      >
        Hacemos de <span class="text-[var(--primary)]">tu idea</span> o <span
          class="text-[var(--primary)]">negocio</span
        > una <span class="text-[var(--primary)]">obra maestra</span>
      </p>
    </div>
    <div
      data-aos="fade-left"
      class="flex flex-row justify-center w-[700px] rounded-[38px]"
    >
      <img src={foto.src} alt="coffee" class="rounded-[38px]" />
    </div>
  </div>
</section>

<script>
  import AOS from "aos";
  import "aos/dist/aos.css";
  AOS.init({
    duration: 1000,
    once: false,
  });
</script>
