---
import GoTo from "../../hyperlinks/GoTo/GoTo.astro";
import { NETWORKS } from "./networks";
---

<article>
  {
    NETWORKS.map(({ url, icon, display }) => (
      <GoTo title={display} href={url}>
        <img src={icon.src} alt={display} />
      </GoTo>
    ))
  }
</article>

<style>
  article {
    display: flex;

    align-items: center;

    a {
      img {
        width: 35px;
        height: 35px;
        aspect-ratio: 1 / 1;
      }
    }
  }
</style>
