---
import Layout from "../layouts/Layout/Layout.astro";
import Clients from "../views/index/Clients/Clients.astro";
import Slider from "../views/index/Slider/Slider.astro";
---

<Layout title="edarcode">
  <main>
    <Slider />
    <Clients />
  </main>
</Layout>

<style>
  main {
    display: grid;
    align-content: start;
    gap: var(--lg);
    max-width: 1598px;
    margin-left: auto;
    margin-right: auto;

    picture {
      position: relative;
      max-height: 795px;
      margin-left: auto;
      margin-right: auto;

      .img {
        object-fit: cover;
        width: 100%;
        height: 795px;
        aspect-ratio: 2122 / 795;
      }

      div {
        position: absolute;
        top: 50%;
        left: var(--xl);
        transform: translateY(-50%);

        span {
          color: var(--primary);
        }

        .traz {
          font-size: 116px;
        }

        .entre {
          font-size: 40px;
        }
      }
    }

    .clients {
      display: grid;
      gap: var(--lg);

      .quote {
        text-align: center;
        align-self: center;
        h2 {
          font-size: 50px;

          span {
            color: var(--primary);
          }
        }

        p {
          font-size: 32px;
        }
      }

      .logos {
        background-color: #fff;
        border-radius: var(--lg);
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  }
</style>
