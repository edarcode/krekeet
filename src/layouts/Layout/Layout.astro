---
import "../../styles/reset.css";
import "../../styles/colors.css";
import "../../styles/scales.css";
import "../../styles/fonts.css";
import Header from "./Header/Header.astro";
import Footer from "./Footer/Footer.astro";
import ScheduleAppointment from "../../components/hyperlinks/ScheduleAppointment/ScheduleAppointment.astro";
import krekeet from "./logo.png";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Krekeet es una agencia de comunicación digital especializada en diseño de experiencia del usuario con base en la república dominicana y socios estratégicos en latinoamérica, USA, Europa y Asia."
    />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Krekeet es una agencia de comunicación digital especializada en diseño de experiencia del usuario con base en la república dominicana y socios estratégicos en latinoamérica, USA, Europa y Asia."
    />
    <meta property="og:image" content={krekeet.src} />
    <meta property="og:url" content="https://krekeet.vercel.app/" />
    <meta name="author" content="edarcode, Shaquille Montero" />
    <meta name="keywords" content="krekeet" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <ScheduleAppointment />
  </body>
</html>

<style>
  :root {
    --b: 1px solid red;
    --mw-layout: 1600px;
    --br: 18px;
    --h-nav: 79px;
  }

  body {
    scrollbar-gutter: stable;
    overflow-x: hidden;

    display: grid;
    grid-template-rows: auto 1fr auto;

    background-color: var(--bg-main);
    color: var(--paras);
  }
</style>
